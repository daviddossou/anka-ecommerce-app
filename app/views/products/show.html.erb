<h1><%= @product.name %></h1>
<p><%= @product.price %></p>
<p><%= @product.description %></p>
<%= form_with model: @order, remote: false, data: { turbo: false } do |f| %>
  <%= f.hidden_field :product_id, value: @product.id %>
  <%= f.hidden_field :amount, value: @product.price %>
  <%= f.submit "Buy" %>
<% end %>
